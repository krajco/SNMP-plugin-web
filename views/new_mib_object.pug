extends layout

block layout-content
    div.main-container.container-shadow
        div.container-header
            h3.display-4 Create new MIB object
        form(action='new_mib_object', method="POST")
            div.form-group.row
                div.col
                    input(type="text" value="" name="object_name" placeholder="MIB object name" class="form-control")
                div.col
                    select.form-control(name='object_type')
                        option(value="" disabled selected hidden) Select type ..
                        option(value="scalar") Scalar
                        option(value="table") Table
                div.col
                    select(id="types" class="form-control" onchange="reloadSensors()")
                        option(value="" disabled selected hidden) Select sensors ..
                        each sensor in sensors
                            option(value=sensor) #{sensor.entity_id}
            div#form_mib_objects
            div.form-group.row.form-right
                div(class="btn btn-info btn-form" onclick="newElementMibObject('', '')") Add Element
            div.form-group.row
                button.btn.btn-success.btn-form(type="submit") Finish!
            div.form-group.row
                if result
                    div.alert.alert-success.btn-form(role="alert") Successfull